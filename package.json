{
  "name": "nest-serverless-api",
  "version": "1.0.0",
  "description": "serverless app",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf .dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "serverless offline start --reloadHandler --stage local",
    "deploy": "serverless deploy --stage prod",
    "remove": "serverless remove --stage prod",
    "start:db": "docker-compose -f ./docker/docker-compose.yml --env-file ./environments/.env.local up -d",
    "start:db:prod": "docker-compose -f ./docker/docker-compose.yml --env-file ./environments/.env.prod up -d",
    "lint": "eslint ./src --ext .js,.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "yarn build && cross-env STAGE=local ts-node ./node_modules/typeorm/cli.js -d .dist/src/infrastructure/data-access/typeorm.config.js",
    "migration:run": "yarn typeorm migration:run",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "db:drop": "yarn typeorm schema:drop",
    "db:refresh": "yarn db:drop && yarn migration:run"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "@nestjs/common": "10.1.2",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.2",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.1.2",
    "@nestjs/swagger": "7.1.2",
    "@nestjs/typeorm": "9.0.0",
    "@types/aws-serverless-express": "3.3.5",
    "aws-serverless-express": "3.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "cross-env": "7.0.3",
    "helmet": "7.0.0",
    "html-webpack-plugin": "5.5.3",
    "mssql": "10.0.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.1.12",
    "rimraf": "5.0.1",
    "rxjs": "7.8.1",
    "serverless-http": "3.2.0",
    "typeorm": "0.3.17",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@nestjs/testing": "10.2.3",
    "@types/aws-lambda": "8.10.119",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/hapi__joi": "17.1.10",
    "@types/jest": "29.5.4",
    "@types/luxon": "3.3.1",
    "@types/node": "20.4.5",
    "@types/passport-jwt": "3.0.9",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "circular-dependency-plugin": "5.2.2",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "lint-staged": "14.0.1",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "serverless": "3.34.0",
    "serverless-dotenv-plugin": "6.0.0",
    "serverless-offline": "12.0.4",
    "serverless-plugin-typescript": "2.1.5",
    "serverless-plugin-warmup": "8.2.1",
    "serverless-webpack": "5.13.0",
    "supertest": "6.3.3",
    "terser-webpack-plugin": "5.3.9",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tslint": "6.1.3",
    "webpack": "5.88.2",
    "webpack-bundle-analyzer": "4.9.1",
    "webpack-cli": "5.1.4",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
