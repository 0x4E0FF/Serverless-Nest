{
  "name": "nest-serverless-api",
  "version": "1.0.0",
  "description": "serverless app",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf .dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "serverless offline start --reloadHandler --stage local",
    "deploy": "serverless deploy --stage prod",
    "start:db": "docker-compose -f ./docker/docker-compose.yml --env-file ./environments/.env.local up -d",
    "start:db:prod": "docker-compose -f ./docker/docker-compose.yml --env-file ./environments/.env.prod up -d",
    "lint": "eslint ./src --ext .js,.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "yarn build && cross-env STAGE=local ts-node ./node_modules/typeorm/cli.js -d .dist/src/infrastructure/database/typeorm.config.js",
    "migration:run": "yarn typeorm migration:run",
    "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
    "db:drop": "yarn typeorm schema:drop",
    "db:refresh": "yarn db:drop && yarn migration:run"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "10.1.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "10.1.2",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.2",
    "@nestjs/swagger": "^7.1.2",
    "@nestjs/typeorm": "9.0.0",
    "@types/aws-serverless-express": "^3.3.5",
    "aws-serverless-express": "^3.3.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "helmet": "^7.0.0",
    "html-webpack-plugin": "^5.5.3",
    "mssql": "^9.1.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^7.8.1",
    "serverless-http": "^3.2.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@nestjs/testing": "10.1.2",
    "@types/aws-lambda": "^8.10.119",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.16.0",
    "@types/hapi__joi": "^17.1.9",
    "@types/jest": "^23.3.1",
    "@types/luxon": "^3.3.1",
    "@types/node": "^20.4.5",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "circular-dependency-plugin": "^5.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "8.0.2",
    "jest": "^23.5.0",
    "lint-staged": "13.0.3",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "serverless": "3.33.0",
    "serverless-auto-swagger": "^2.12.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "12.0.4",
    "serverless-plugin-common-excludes": "^4.0.0",
    "serverless-plugin-include-dependencies": "^5.1.0",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-webpack": "^5.12.0",
    "supertest": "^3.1.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^23.1.3",
    "ts-loader": "9.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "webpack": "5.75.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
